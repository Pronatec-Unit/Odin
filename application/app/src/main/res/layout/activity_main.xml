<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a06235434.preodin.MainActivity"
    android:weightSum="1"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ODIN"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textAllCaps="false"
        android:layout_below="@+id/searchView2"
        android:layout_toStartOf="@+id/buttonFemi"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SUA ENCICLOPÃ‰DIA DE NOMES"
        android:id="@+id/texthome2"
        android:textColor="@android:color/holo_orange_light"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MASCULINOS"
        android:id="@+id/buttonMasc"
        android:layout_marginTop="73dp"
        android:width="200dp"
        android:height="160dp"
        android:background="#42a1f3"
        android:textColor="#ffffff"
        android:textSize="28px"
        android:textAlignment="center"
        android:layout_below="@+id/texthome2"
        android:layout_alignParentStart="true"
        android:radius="10dp"
        android:clickable="true"
        android:enabled="true"
        android:singleLine="false" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEMININOS"
        android:id="@+id/buttonFemi"
        android:width="200dp"
        android:height="160dp"
        android:textColor="#ffffff"
        android:textSize="30px"
        android:background="#e96d71"
        android:textAlignment="center"
        android:layout_alignTop="@+id/buttonMasc"
        android:layout_alignStart="@+id/buttonSobre"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUTROS"
        android:id="@+id/buttonOutros"
        android:width="200dp"
        android:height="160dp"
        android:textColor="#ffffff"
        android:textSize="30px"
        android:background="#7ed987"
        android:textAlignment="center"
        android:layout_below="@+id/buttonMasc"
        android:layout_alignStart="@+id/buttonMasc"
        android:layout_marginTop="76dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOBRENOMES"
        android:id="@+id/buttonSobre"
        android:width="200dp"
        android:height="160dp"
        android:textColor="#ffffff"
        android:textSize="28px"
        android:background="#fba720"
        android:textAlignment="center"
        android:layout_alignTop="@+id/buttonOutros"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignTop="@+id/textView" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonFemi" />

</RelativeLayout>
